{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_BACKEND_URL": "https://your-azure-app.azurewebsites.net",
    "VITE_ADMIN_USERNAME": "admin",
    "VITE_ADMIN_PASSWORD": "your_secure_password_here"
  }
}
